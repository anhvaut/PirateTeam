<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgItemNews"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_marginLeft="@dimen/activity_vertical_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:textColor="@color/colorBelizeHole"
        android:layout_marginTop="@dimen/activity_vertical_margin_small"
        android:layout_below="@+id/imgItemNews"
        android:text="Title" />
    <TextView
        android:id="@+id/tvItemSubstance"
        android:padding="@dimen/activity_vertical_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        android:layout_below="@+id/tvItemTitle"
        android:text="Title" />

    <TextView
        android:id="@+id/tvItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:paddingRight="@dimen/activity_vertical_margin_small"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/activity_vertical_margin_small"
        android:layout_marginBottom="@dimen/activity_vertical_margin_small"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvItemSubstance"
        android:text="Date" />
    <TextView
        android:layout_below="@id/tvItemDate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorClouds" />
</RelativeLayout>