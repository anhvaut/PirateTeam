<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <ImageView
            android:id="@+id/imgItemNews"
            android:layout_width="0dp"
            android:layout_margin="@dimen/activity_vertical_margin_small"
            android:scaleType="fitXY"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_weight="4" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin_small"
                android:text="Title"
                android:textColor="@color/colorBelizeHole"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/tvItemSubstance"
                android:layout_below="@id/tvItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvItemDate"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/tvItemTitle"
                android:gravity="end|bottom"
                android:layout_margin="@dimen/activity_vertical_margin_small"
                android:text="Date Time"
                android:textSize="@dimen/text_size_small" />

        </RelativeLayout>
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorClouds" />

</TableLayout>